# Production environment (real usage)
# Copy to .env.production and set values for your production server
NODE_ENV=production
DB_PATH=./prod.db
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-pass
SMTP_SECURE=false
ALERT_FROM=no-reply@yourdomain.com
ALERT_TO=ops@yourdomain.com
# WhatsApp via Twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_FROM=whatsapp:+123456789
ADMIN_WHATSAPP=779992669
# Enable backups & schedulers in production
ENABLE_BACKUPS=true
ENABLE_SCHEDULERS=true
BACKUP_ENCRYPT=true
BACKUP_PASSPHRASE=change-me-to-a-strong-passphrase
# Optional S3 upload
BACKUP_S3_BUCKET=
BACKUP_S3_KEY=
BACKUP_S3_SECRET=
BACKUP_S3_REGION=
BACKUP_S3_ENDPOINT=
