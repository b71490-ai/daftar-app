generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model License {
  id          String   @id @default(cuid())
  key         String   @unique
  expiresAt   DateTime
  deviceId    String?
  status      String   @default("active")
  createdAt   DateTime @default(now())
  activatedAt DateTime?
}